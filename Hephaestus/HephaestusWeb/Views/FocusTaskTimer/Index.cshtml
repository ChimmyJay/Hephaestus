@{
    ViewData["Title"] = "Focus Tool";
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
</head>
<div id="app">
    <div class="text-center">
        <div class=" input-group">
            <input type="text" class="form-control" placeholder="Type task name in this"
                   v-model="FocusTask" :disabled="isDisabled" />
            <button type="button" class="btn btn-success"
                    v-on:click="OnFocusTask" :disabled="isDisabled">
                Start
            </button>
        </div>
    </div>
</div>

<script>
    new Vue({
        el: '#app',
        data: {
            FocusTask: "",
            IsFocusing: false
        },
        computed: {
            isDisabled: function () {
                return this.IsFocusing === true;
            }
        },
        methods: {
            OnFocusTask: function () {
                this.IsFocusing = true;
            }
        }
    })
</script>